{% extends "layout.njk" %}

{% block content %}

<div class="card table-container">
  <div class="header">
    <a href="/teachers/create" class="button">Novo</a>
    <form action="/teachers" method="get">
      <input 
        type="text" 
        name="filter"
        placeholder="Nome ou acompanhamento" 
        value={{filter}}
        >
      <button type="submit">Filtrar</button>
    </form>
  </div>
  <table width="100%">
    <thead>
      <tr>
        <th>Professor</th>
        <th>Acompanhamento</th>
        <th>Alunos</th>
        <th>Ação</th>
      </tr>
    </thead>
    <tbody>
      {% for teacher in teachers %}
      <tr>
        <td>
          <span style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></span>
          {{teacher.name}}
        </td>
        <td>
        {% for subject in teacher.subjects_taught %}
          <span>{{subject}}</span>
        {% endfor %}
        </td>
        <td>
          <div class="total_students">
            {{teacher.total_students}}
          </div>
        </td>
        <td>
          <a href="/teachers/{{teacher.id}}">ver</a>
        </td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
</div>


{% endblock content %}
