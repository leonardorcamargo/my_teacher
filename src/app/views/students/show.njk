{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section class="avatard" style="background: url({{ student.avatar_url }})no-repeat center center / cover" ></section>
    <section class="details">

        <h3>Detalhes</h3>

        <div class="item">
            <div>Aluno</div>
            <div>{{ student.name }}</div>
        </div>
        <div class="item">
            <div>Idade</div>
            <div>{{student.age}}</div>
        </div>

        <div class="item">
            <div>E-mail</div>
            <div>
                {{ student.email }}           
            </div>
        </div>

        <div class="item">
            <div>Ano escolar</div>
            <div>
                {{student.grade}}
            </div>
            
        </div>
        
        <div class="item">
            <div>Carga hor√°ria semanal</div>
            <div>{{student.workload}}</div>
        </div>

        <div class="buttons">
            <a href="/students/{{student.id}}/edit" class="button">Editar</a>
            <form method="post" id="form-delete" action="/students?_method=DELETE">
                <input type="hidden" name="id" value="{{student.id}}">
                <button type="submit" id="delete">Deletar</button>
            </form>
        </div>
     {% include '../confirm.njk'%}
    </section>
</div>


{% endblock content %}
