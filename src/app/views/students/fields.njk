<div class="item">
    <div>Endereço da imagem de perfil</div>
    <div><input type="url" name="avatar_url" placeholder="http://" value="{{student.avatar_url}}">
    </div>
</div>
<div class="item">
    <div>Nome completo</div>
    <div><input type="text" name="name" placeholder="Digite o nome" value="{{student.name}}">
    </div>
</div>
<div class="item">
    <div>Data de nascimento</div>
    <div>
        <input type="date" name="birth_date" value="{{student.birth_date}}">
    </div>
</div>
<div class="item">
    <div>E-mail</div>
    <div>
        <input type="email" name="email" value="{{student.email}}">
    </div>
</div>
<div class="item">
    <div>Ano Escolar</div>
    <div>
        <select name="grade">
            <option value="" hidden>Selecione</option>
            <option value="5EF" 
            {% if student.grade == '5EF' %}selected{% endif %}>
                5º Ano do Ensino Fundamental
            </option>
            <option value="6EF" 
            {% if student.grade == '6EF' %}selected{% endif %}>
                6º Ano do Ensino Fundamental
            </option>
            <option value="7EF" 
            {% if student.grade == '7EF' %}selected{% endif %}>
                7º Ano do Ensino Fundamental
            </option>
            <option value="8EF" 
            {% if student.grade == '8EF' %}selected{% endif %}>
                8º Ano do Ensino Fundamental
            </option>
            <option value="1EM" 
            {% if student.grade == '1EM' %}selected{% endif %}>
                1º Ano do Ensino médio
            </option>
            <option value="2EM" 
            {% if student.grade == '2EM' %}selected{% endif %}>
                2º Ano do Ensino médio
            </option>
            <option value="3EM" 
            {% if student.grade == '3EM' %}selected{% endif %}>
                3º Ano do Ensino médio
            </option>
        </select>
    </div>   
</div>
<div class="item">
    <div>Carga horária semanal</div>
    <div>
        <input type="number" name="workload" value="{{student.workload}}">
    </div>
</div>
<div class="item">
    <div>Aluno de</div>
    <div>
        <select name="teacher">
            {% for teacher in teachersOptions %}
                <option value="{{teacher.id}}" 
                {% if student.teacher_id == teacher.id %} selected {% endif %}>
                    {{teacher.name}}
                </option>
            {% endfor %}
        </select>
    </div>   
</div>




<button type="submit">Salvar</button>